        <!--  NOTE: StackPanel for DataGrid  -->
        <StackPanel
            Grid.RowSpan="3"
            Grid.Column="2"
            Width="565"
            Height="Auto"
            Margin="37,71,20,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top" />

        <TextBlock
            Name="txtLEDStatus"
            Grid.Row="2"
            Grid.Column="2"
            Width="169"
            Height="94"
            Margin="382,10,71,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="Black"
            FontSize="20"
            Foreground="White">
            LED is now OFF
        </TextBlock>
        <!--  NOTE: StackPanel for Buttons  -->

        <Button
            x:Name="btnSample"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="2"
            Height="Auto"
            Margin="73,251,313,33"
            Background="Yellow"
            BorderBrush="AntiqueWhite"
            BorderThickness="1"
            Click="btnSample_Click">
            <Grid>
                <Image
                    Width="80"
                    Height="80"
                    Margin="0,-10,0,0"
                    VerticalAlignment="Top"
                    Source="Images\logo_inventory.png" />
                <TextBlock
                    Margin="19,46,15,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="20"
                    Foreground="Black">
                    LED ON/OFF
                </TextBlock>
            </Grid>
        </Button>

        <Button
            x:Name="btnOpenConnection"
            Grid.RowSpan="2"
            Grid.Column="2"
            Height="Auto"
            Margin="15,42,357,84"
