<Window
    x:Class="WQAS.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WQAS"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wp="clr-namespace:WQAS"
    Title="Water Quality Assessment System"
    Width="850"
    Height="650"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{StaticResource MaterialDesignFont}"
    Icon="Images/wqas_logo.png"
    ResizeMode="NoResize"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">


    <!--  A PROGRAM CREATED BY FHRANZ ALIMORONG  -->
    <!--  Project (Inventory System) for COE181P  -->
    <!--  (c) June 2017  -->
    <!--  Revised August 2017  -->
    <!--  Updates: Login, some changes with other xaml, and changed database from xml to SQL  -->
    <Grid x:Name="MainGrid">

        <!--  List of all the buttons on LeftDrawer  -->
        <materialDesign:DrawerHost IsLeftDrawerOpen="{Binding ElementName=MenuToggleButton, Path=IsChecked}">
            <materialDesign:DrawerHost.LeftDrawerContent>
                <DockPanel MinWidth="212">
                    <ToggleButton
                        Margin="16"
                        HorizontalAlignment="Right"
                        DockPanel.Dock="Top"
                        IsChecked="{Binding ElementName=MenuToggleButton, Path=IsChecked, Mode=TwoWay}"
                        Style="{StaticResource MaterialDesignHamburgerToggleButton}" />
                    <ListBox
                        x:Name="lstDockLeft"
                        Margin="0,16,0,16"
                        SelectedIndex="0">
                        <Button
                            x:Name="btnHome"
                            MinWidth="200"
                            MinHeight="40"
                            HorizontalAlignment="Left"
                            Click="btnHome_Click"
                            Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                            CommandParameter="{x:Static Dock.Left}"
                            Opacity="100"
                            Selector.IsSelected="True"
                            Style="{DynamicResource MaterialDesignFlatButton}">
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Home</TextBlock>
                        </Button>
                        <Button
                            x:Name="btnSample"
                            MinWidth="200"
                            MinHeight="40"
                            HorizontalAlignment="Left"
                            Click="btnSample_Click"
                            Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                            CommandParameter="{x:Static Dock.Left}"
                            Style="{DynamicResource MaterialDesignFlatButton}">
                            Sample
                        </Button>
                        <Button
                            x:Name="btnAssess"
                            MinWidth="200"
                            MinHeight="40"
                            HorizontalAlignment="Center"
                            Click="btnAssess_Click"
                            Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                            CommandParameter="{x:Static Dock.Left}"
                            Style="{DynamicResource MaterialDesignFlatButton}">
                            Assess
                        </Button>
                        <Button
                            x:Name="btnRead"
                            MinWidth="200"
                            MinHeight="40"
                            HorizontalAlignment="Center"
                            Click="btnRead_Click"
                            Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                            CommandParameter="{x:Static Dock.Left}"
                            Style="{DynamicResource MaterialDesignFlatButton}">
                            Read
                        </Button>
                        <Button
                            x:Name="btnReadReport"
                            MinWidth="200"
                            MinHeight="40"
                            HorizontalAlignment="Center"
                            Click="btnReadReport_Click"
                            Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                            CommandParameter="{x:Static Dock.Left}"
                            Style="{DynamicResource MaterialDesignFlatButton}">
                            Sales Report
                        </Button>
                        <Button
                            x:Name="btnClose"
                            MinWidth="200"
                            MinHeight="40"
                            HorizontalAlignment="Center"
                            Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                            CommandParameter="{x:Static Dock.Left}"
                            Style="{DynamicResource MaterialDesignFlatButton}">
                            Close
                        </Button>
                    </ListBox>
                </DockPanel>
            </materialDesign:DrawerHost.LeftDrawerContent>
            <Grid x:Name="grdUserControl" VerticalAlignment="Bottom">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <ContentControl
                    x:Name="cntControl"
                    Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" />
            </Grid>

        </materialDesign:DrawerHost>

        <!--  Top Panel containing the title and list  -->
        <DockPanel>
            <materialDesign:ColorZone
                Padding="5"
                materialDesign:ShadowAssist.ShadowDepth="Depth2"
                DockPanel.Dock="Top"
                Mode="PrimaryMid">
                <DockPanel>
                    <ToggleButton
                        x:Name="MenuToggleButton"
                        IsChecked="False"
                        Style="{StaticResource MaterialDesignHamburgerToggleButton}"
                        Visibility="Visible" />
                    <materialDesign:PopupBox
                        DockPanel.Dock="Right"
                        PlacementMode="BottomAndAlignRightEdges"
                        StaysOpen="False">
                        <StackPanel>
                            <Button Content="About Us" />
                            <Button Content="Nice Popup" />
                            <Button Content="Version 2.0" IsEnabled="False" />
                            <Separator />
                            <Button Content="Goodbye" />
                        </StackPanel>
                    </materialDesign:PopupBox>
                    <TextBlock
                        x:Name="txbTitle"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="22"
                        Text="Home" />
                </DockPanel>
            </materialDesign:ColorZone>
        </DockPanel>

        <!--<Grid
            VerticalAlignment="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <wp:Admin x:Name="wpAdmin" Visibility="Hidden" />
        </Grid>-->

    </Grid>
</Window>
